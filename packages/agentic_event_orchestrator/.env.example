# ============================================
# Agentic Event Orchestrator - Environment Configuration
# ============================================

# Supabase Cloud PostgreSQL Database
# Get your connection string from: https://supabase.com/dashboard/project/_/settings/database
# Use the "Connection string" > "URI" option with port 5432 (direct connection)
# Note: For Python/psycopg2, use the direct connection (port 5432), not the pooled connection (port 6543)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# Alternative: Individual connection parameters (used if DATABASE_URL is not set)
DB_HOST=db.your-project-ref.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-password

# Google Gemini API Key (for NLP processing)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# OpenAI API Key (for agent orchestration)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Backend API URL (for vendor integration)
BACKEND_API_URL=http://localhost:3001/api/v1

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:3002

# Chainlit Configuration (for chat UI)
CHAINLIT_AUTH_SECRET=your-chainlit-secret

# Server Configuration
PORT=8000
HOST=0.0.0.0
